pipeline {
    agent any

    environment {
        VENV = "venv"
        PYTHON = "python"   // assumes python is in PATH on Windows
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-https', url: 'https://github.com/DiyaDoyle/CICD.git'
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                bat "${env.PYTHON} -m venv ${env.VENV}"
                bat ".\\${env.VENV}\\Scripts\\python.exe -m pip install --upgrade pip"
                // If you add requirements.txt later, uncomment this line
                // bat ".\\${env.VENV}\\Scripts\\pip install -r requirements.txt"
                bat ".\\${env.VENV}\\Scripts\\pip install flask pandas numpy tensorflow"
            }
        }

        stage('Run Flask App') {
            steps {
                bat ".\\${env.VENV}\\Scripts\\python.exe app.py"
            }
        }
    }
}
